{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "rules": {
        "no-empty": ["error", {"allowEmptyCatch": true}],
        "indent": ["error", 4, {"SwitchCase": 1}],
        "arrow-parens": ["error", "as-needed"]
    }
}
